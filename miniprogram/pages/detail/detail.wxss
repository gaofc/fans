.page {
  background-color: #f8f8f8;
  font-size: 16px;
  color: #555;
}
.item-ans {
  width: 100%;
  display: flex;
  flex-grow: row no-wrap;
  justify-content: space-between;
  padding: 30rpx;
  box-sizing: border-box;
  height: 150rpx;
  align-items: center;
}

.item-content {
  padding: 0 30rpx 20rpx 30rpx;
}

.image-one {
  padding-top: 6rpx;
  width: 100%;
  height: 400rpx;
}

.image-two {
  width: 373rpx;
  height: 300rpx;
  padding-top: 6rpx;
}

.image-three {
  width: 247rpx;
  height: 200rpx;
  margin-top: 6rpx;
}

.operation {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  flex-grow: row no-wrap;
  justify-content: space-around;
  padding: 30rpx;
  padding-left: 100rpx;
  padding-right: 100rpx;
  box-sizing: border-box;
  height: 100rpx;
  align-items: center;
  font-size: 14px;
  background-color: #fff;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  position: relative;
  padding-right: 30rpx;
}

.avatar .img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar .doyen {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  bottom: -2px;
  right: 20rpx;
}

.expertInfo {
  font-size: 12px;
  flex-grow: 2;
  color: #b0b0b0;
  line-height: 1.5em;
}

.expertInfo .name {
  font-size: 16px;
  color: #000;
  margin-bottom: 6px;
}

.sign-button {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 14px;
  border-radius: 60rpx;
  border: 1px solid #555;
  color: #555;
}
.button-icon {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.schedule-date {
  width: 100%;
  display: flex;
  flex-grow: row no-wrap;
  justify-content: space-between;
  padding-top: 30rpx;
  box-sizing: border-box;
  height: 100rpx;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 14px;
  color: #b0b0b0;
  padding-right: 40rpx;
}

.shedule-button-icon {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.comment-item {
  width: 100%;
  display: flex;
  margin-top: 30rpx;
}
.comment-item-avtar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.comment-item-content {
  display: flex;
  flex-direction: column;
  margin-right: 20rpx;
  width: 95%;
}
.comment-item-content-name {
  font-size: 14px;
  color: #b0b0b0;
}
.comment-item-content-bottom {
  display: flex;
  justify-content: space-between;
  font-size: 12px;
  color: #ccc;
  padding-right: 20rpx;
}
.comment-item-content-bottom-image {
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}

.edit-comment {
  position: fixed;
  bottom: 450rpx;
  width: 100%;
  display: flex;
  flex-grow: row no-wrap;
  justify-content: space-between;
  padding: 30rpx;
  box-sizing: border-box;
  align-items: center;
  font-size: 14px;
  background-color: #fff;
}

.comment-button {
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  font-size: 14px;
  border-radius: 60rpx;
  border: 1px solid #4675f9;
  color: #4675f9;
}
.video {
  width: 100%;
}
.reply {
  background-color: #f7f7f7;
  width: 95%;
  padding: 10rpx;
}