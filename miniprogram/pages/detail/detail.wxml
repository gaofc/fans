<view class="page">

  <view style="background:#fff">
    <view class="item-ans">
      <view class="avatar">
        <image class="img" src="{{data.profile_image_url}}"></image>
      </view>
      <view class="expertInfo">
        <view class="name">{{data.screen_name}}</view>
        <view class="tag">{{data.created_at}}</view>
      </view>
    </view>

    <view class='item-content'>
      <rich-text nodes="{{data.text}}"></rich-text>
    </view>

    <view wx-if="{{data.page_pics != undefined && data.page_pics.length == 1}}" class='image'>
      <image class="image-one" mode="aspectFill" src="{{data.page_pics[0]}}"></image>
    </view>

    <view wx-if="{{data.page_pics != undefined && (data.page_pics.length == 2 || data.page_pics.length == 4)}}" class='image'>
      <block wx:for="{{data.page_pics}}">
        <image class="image-two" mode="aspectFill" src="{{item}}" />
      </block>
    </view>

    <view wx-if="{{data.page_pics != undefined && data.page_pics.length > 2 &&  data.page_pics.length != 4}}" class='image'>
      <block wx:for="{{data.page_pics}}">
        <image class="image-three" mode="aspectFill" src="{{item}}" />
      </block>
    </view>

    <view wx-if="{{data.media_info != undefined}}" style="position:relative;">
      <video class="video" src="{{data.media_info.stream_url}}"></video>
    </view>




